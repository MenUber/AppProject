<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_900"
    tools:context=".presentation.home.league.match.MatchFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/matches_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/layout_connection_error"
                    layout="@layout/layout_connection_error"
                    android:visibility="gone" />

                <include
                    android:id="@+id/layout_service_error"
                    layout="@layout/layout_service_error"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/layout_matches"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/date_message_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@color/grey_800">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentLeft="true"
                            android:layout_margin="4dp"
                            android:src="@drawable/ic_info_24dp"
                            android:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="@string/ft_info"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/date_filter_container"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/grey_800"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_date_filter"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="16dp"
                            android:gravity="center"
                            android:text="@string/app_name"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/iv_date_filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="4dp"
                            android:paddingLeft="64dp"
                            android:src="@drawable/ic_close_black_24dp"
                            android:tint="@color/white" />

                    </RelativeLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_not_found"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/no_matches_found"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:visibility="gone" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/match_recycler"
                            android:scrollbars="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            tools:listitem="@layout/item_match"
                            android:scrollbarThumbVertical="@color/colorAccent"
                            android:scrollbarStyle="insideInset"
                            android:scrollbarSize="4dp"
                            android:fadeScrollbars="false"/>
                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>

    </android.support.v4.widget.SwipeRefreshLayout>
</FrameLayout>