<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="4dp"
    android:background="@color/grey_800">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_local"
            android:layout_width="70dp"
            android:layout_height="46dp"
            android:src="@drawable/flag" />

        <TextView
            android:id="@+id/tv_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            tools:text="Perú" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textAllCaps="true"
            android:textColor="@color/amber_600"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            tools:text="Grupo A" />

        <LinearLayout
            android:id="@+id/layout_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_local_goals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="@color/amber_600"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="2" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:src="@drawable/ball_white" />

            <TextView
                android:id="@+id/tv_visitor_goals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="@color/amber_600"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="0" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textColor="@color/amber_600"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="14:00" />

        <TextView
            android:id="@+id/tv_stadium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:textColor="@color/amber_600"
            android:textSize="16sp"
            tools:text="Estadio Nacional" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="Viernes 15 de junio" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_visitor"
            android:layout_width="70dp"
            android:layout_height="46dp"
            tools:src="@drawable/flag" />

        <TextView
            android:id="@+id/tv_visitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/white"
            tools:text="Perú"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"/>

    </LinearLayout>

</LinearLayout>